generator client {
  provider = "prisma-client-js"
  output   = "./"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 상태 추적만 하는 테이블
model FlightStatusHistory {
  id           Int      @id @default(autoincrement())
  flightNumber String // 항공편 번호 (ex: KE123)
  std          String // 예정 출발 시간
  prevStatus   String? // 이전 상태 (ex: 출발, 지연)
  newStatus    String? // 새로운 상태 (ex: 도착, 결항)
  changedAt    DateTime @default(now())

  @@unique([flightNumber, std]) // 같은 항공편 + 시간은 한 번만 기록
}

model PushSubscription {
  id          Int      @id @default(autoincrement())
  endpoint    String   @unique
  auth        String
  p256dh      String
  userId      String // 로그인된 사용자 ID
  airportCode String
  lineType    String
  ioType      String
  enabled     Boolean  @default(false) // 사용자가 스위치 켜놓은 상태인지 여부
  createdAt   DateTime @default(now())

  @@unique([userId, airportCode, lineType, ioType]) // 중복 구독 방지
}
